BoxLayout:
    orientation:'vertical'
    MDToolbar:
        title: 'Booked'
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        panel_color: .2, .2, .2, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Quiet Study'
            icon: 'notebook'

            MDCard:
                orientation: "vertical"
                padding: "8dp"
                size_hint: None, None
                size: "320dp", "180dp"
                pos_hint: {"center_x": .5, "center_y": .5}

                MDLabel:
                    text: "Title"
                    theme_text_color: "Secondary"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDSeparator:
                    height: "1dp"

                MDLabel:
                    text: "Body"

        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Group Study'
            icon: 'notebook-multiple'

            MDLabel:
                text: 'GS'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Meeting'
            icon: 'account-group'

            MDLabel:
                text: 'Meeting'
                halign: 'center'